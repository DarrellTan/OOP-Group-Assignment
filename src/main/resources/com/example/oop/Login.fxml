<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.oop.LoginController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText">Welcome to Pollufree</Label>
    <TextField fx:id="usernameField" promptText="Username"></TextField>
    <PasswordField fx:id="passwordField" promptText="Password"></PasswordField>

    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Button text="Login" styleClass="button" fx:id="loginButton" onAction="#buttonEventHandler"/>
        <Button text="Sign Up" styleClass="button" onAction="#switchToScene1"/>
    </HBox>
</VBox>

