<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.oop.RegisterController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Register ">Register New User</Label>
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="cofirmPasswordField" promptText="Confirm Password" />
    <Label fx:id="feedbackMessage" alignment="CENTER" layoutX="-3.0" layoutY="338.0" prefHeight="17.0" prefWidth="580.0" textAlignment="CENTER" />

    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Button fx:id="registerButton" onAction="#buttonRegister" styleClass="button" text="Sign Up" />
        <Button onAction="#switchToMainMenu" styleClass="button" text="Back" />
    </HBox>
</VBox>
